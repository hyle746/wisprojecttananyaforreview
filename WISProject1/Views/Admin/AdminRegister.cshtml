
@{
    ViewBag.Title = "AdminRegister";
    Layout = "~/Views/Shared/_AdminLayout2.cshtml";
}

<h2>Admin Register</h2>



<div class="col-xl-12 col-md-12 mb-12">
    <div class="card border-left-primary shadow h-100 py-2">
        <div class="card-body">
            <div class="row no-gutters align-items-center">
                <div class="col mr-2">

                    <form class="user">

                        <div class="form-group col-md-10">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1"></div>
                        </div>
                        <div class="form-group col-md-10">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1"></div>
                        </div>
                        <input type="hidden" id="exampleInputUserId" />
                        <input type="hidden" id="status" />

                        <div class="form-group col-md-10">
                            <input type="text" class="form-control form-control-user" id="exampleInputFirstName" aria-describedby="textHelp" placeholder="Firstname">
                        </div>

                        <div class="form-group col-md-10">
                            <input type="text" class="form-control form-control-user" id="exampleInputLastName" aria-describedby="textHelp" placeholder="Lastname">
                        </div>

                        <div class="form-group col-md-10">
                            <input type="email" class="form-control form-control-user" id="exampleInputEmail" aria-describedby="emailHelp" placeholder="Email">
                        </div>

                        <div class="form-group col-md-10">
                            <input type="text" class="form-control form-control-user" id="exampleInputUser" aria-describedby="textHelp" placeholder="Username">
                        </div>
                        <div class="form-group col-md-10">
                            <input type="password" class="form-control form-control-user" id="exampleInputPassword" placeholder="Password">
                        </div>
                        <div class="form-group col-md-10">
                            <input type="password" class="form-control form-control-user" id="exampleInputPasswordRetype" placeholder="Re-Type Password">
                        </div>
                        <div class="form-group col-md-10">
                            <select class="form-control" id="role">
                                <option value="">--Select--</option>
                                <option value="Admin">Admin</option>
                                @*<option value="Customer">Student</option>*@
                            </select>
                        </div>
                        <div class="form-group col-md-10">
                            <a href="#" onclick="SaveUser()" class="btn btn-default"> Register</a>
                            <a onclick="window.history.back();" class="btn btn-default">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<br />
<div class="col-xl-12 col-md-12 mb-12">
    <div class="card border-left-primary shadow h-100 py-2">
        <div class="card-body">
            <div class="row no-gutters align-items-center">
                <div class="col mr-2">
                    <div class="form-group col-md-6">
                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1"> </div>
                    </div>


                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
<script>
    $(function () {
        GetAllUser();
    });

    function SaveUser() {
        var user = new Object();
        user.FirstName = $("#exampleInputFirstName").val();
        user.LastName = $("#exampleInputLastName").val();
        user.Email = $("#exampleInputEmail").val();
        user.UserId = $("#exampleInputUserId").val();
        user.Username = $("#exampleInputUser").val();
        user.Password = $("#exampleInputPassword").val();
        user.Role = $("#role").val();
        user.Status = $("#status").val();
        var data = JSON.stringify({
            user: user
        });
        return $.ajax({
            contentType: 'application/json; charset=utf-8',
            dataType: 'json',
            type: 'POST',
            url: "/Admin/SaveUser",
            data: data,
            success: function (result) {
                if (result == true) {
                    //GetAllUser();
                    //Reset();
                    alert("Save Success!");
                    window.location.href = "AdminLogin";
                }
                else {
                    alert("Save failed!");
                }
            },
            error: function () {
                alert("Error!")
            }
        });
    }

</script>

