@model IEnumerable<WISProject1.DAL.Tbl_Product>

@{
    ViewBag.Title = "Product";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="card-header py-3">
    <i class="m-0 font-weight-bold text-primary">Courses</i>
</div>

<div class="card-body">
    <div class="table-responsive">
        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th>Course Id</th>
                    <th>Course</th>
                    <th>Price</th>
                    <th>Action</th>

                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    //int count = 1;

                    <tr>
                        @*<td>@count</td>*@
                        <td>@item.ProductId</td>
                        <td>@item.ProductName</td>
                        <td>@item.Price</td>

                        <td>Edit</td>
                    </tr>

                }


            </tbody>
            <tfoot>
                <tr></tr>
            </tfoot>
        </table>
    </div>
</div>

